{
  "name": "turbo-semver-github-setup",
  "description": "Github action for Turbo Semver",
  "version": "0.3.0",
  "main": "./dist/index.js",
  "author": {
    "name": "jucian0",
    "email": "juciano@outlook.com.br"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jucian0/turbo-semver",
    "homepage": "https://github.com/jucian0/turbo-semver"
  },
  "keywords": [
    "version",
    "semver",
    "monorepo",
    "turborepo",
    "semantic-release"
  ],
  "license": "MIT",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external react",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts --external react",
    "lint": "eslint \"src/**/*.ts*\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/node": "^18.15.3",
    "eslint": "^7.32.0",
    "tsup": "^5.10.1",
    "typescript": "^4.5.3",
    "ts-jest": "^29.0.5",
    "jest": "^29.5.0",
    "@jest/globals": "29.5.0"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.1.1"
  },
  "publishConfig": {
    "access": "public"
  }
}